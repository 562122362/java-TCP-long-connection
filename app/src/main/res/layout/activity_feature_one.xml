<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mediaPlay="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.csdnblog4.View.VideoControlSurfaceView

                    android:id="@+id/svSurfaceView"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/ivVideoThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="320dp" />

                <ImageView
                    android:id="@+id/ivStart"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/start" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放" />

                <Button
                    android:id="@+id/pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂停" />

                <Button
                    android:id="@+id/stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停止" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPlayPos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放进度:" />

                <SeekBar

                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音量:" />

                <SeekBar
                    android:id="@+id/volumSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <com.example.csdnblog4.View.MediaPlayControlView
                android:id="@+id/mediaPlayControlView"
                mediaPlay:itemSplitSize="13"
                mediaPlay:arcWidth="15"
                mediaPlay:showCount="8"
                mediaPlay:volumerBackColor="#40000000"
                mediaPlay:volumeColor="#e0f00e3f"
                mediaPlay:totalCount="16"
                mediaPlay:centerImage="@drawable/volume"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
